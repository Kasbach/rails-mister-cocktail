
<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>


<div class="doses">
  <% @cocktail.doses.each do |dose| %>
    <div>
      <p><%= dose.description %> of <%= dose.ingredient.name %></p>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
    </div>
  <% end %>

</div>


<%= link_to 'Back', cocktails_path, class: "btn btn-primary" %> <br>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
